<Window x:Class="MouseJiggler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mouse Jiggler" Height="178" Width="250"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10,10,10,10">
        <TextBlock Text="Jiggle Interval (ms)" Margin="0,0,0,5"/>
        <TextBox Name="IntervalBox" Text="5000"/>
        <Button Content="Start" Click="Start_Click" Margin="0,10,0,0"/>
        <Button Content="Stop" Click="Stop_Click"/>
        <Button Content="Minimize to Tray" Click="EnableTray_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
